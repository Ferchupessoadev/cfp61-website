{% extends 'layouts/base.twig' %}

{% block title %}
    <title>Contacto</title>
{% endblock %}

{% block content %}
    <div class="flex flex-col items-center justify-center gap-5 h-screen">
        <h1 class="text-3xl font-bold">Contactanos</h1>
        <form class="flex flex-col gap-5 items-center bg-slate-800 py-10 px-3 rounded-lg w-1/2">
            <input class="p-2 rounded placeholder:text-slate-800 outline-none w-full" type="text" placeholder="Asunto">
            <input class="p-2 rounded placeholder:text-slate-800 outline-none w-full" type="email" placeholder="Correo">
            <textarea class="p-2 rounded placeholder:text-slate-800 outline-none w-full resize-none" placeholder="Mensaje"></textarea>
            <input
                class="transition duration-300 ease-in-out rounded-lg px-8 py-2 mb-4 border-2 w-max cursor-pointer text-white hover:text-[var(--bg-primary)] hover:bg-gray-100"
                type="submit"
                value="Enviar"
            >
        </form>
    </div>
{% endblock %}
