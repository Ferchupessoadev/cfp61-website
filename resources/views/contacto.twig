{% extends 'layouts/base.twig' %}

{% block title %}
    <title>Contacto</title>
{% endblock %}

{% block content %}
    <section class="flex items-center justify-center gap-5 w-full h-screen bg-[linear-gradient(to_right,#f0f9ff,#a8c0ff)]">
			<div class="w-full md:w-1/2 h-[90%] flex items-center">
        <form id="contact-form" class="flex flex-col gap-5 items-center rounded-lg bg-slate-900 py-10 px-8 w-full h-full">
						<h1 class="text-3xl font-bold italic text-white">Contactanos</h1>
            <input id="subject" class="p-2 rounded placeholder:text-slate-800 outline-none w-full" type="text" placeholder="Asunto">
            <input id="to" class="p-2 rounded placeholder:text-slate-800 outline-none w-full" type="email" placeholder="Correo">
            <textarea id="message" class="p-2 rounded placeholder:text-slate-800 outline-none h-[120px] w-full resize-none" placeholder="Mensaje"></textarea>
            <input
                class="transition duration-300 ease-in-out rounded-lg px-8 py-2 mb-4 border-2 w-max cursor-pointer text-white hover:text-slate-900 hover:bg-gray-100"
                type="submit"
                value="Enviar"
            >
						<div class="w-full flex flex-col items-center gap-2">
							<div class="flex gap-1 justify-center items-center w-full">
								<div class="w-[80px] h-[1px] bg-white"></div>
								<p class="text-white font-bold">o</p>
								<div class="w-[80px] h-[1px] bg-white"></div>
							</div>
							<div class="flex justify-center gap-4">
								{{ include('components/social.twig') }}
							</div>
						</div>
        </form>
			</div>
    </section>
		<script src="/js/contact.js"></script>
{% endblock %}
